<%- include('partials/header'); -%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!!</h1>
            <p>View Our hand-picked Campgrounds all over the World.</p>
            <p>
                <a href="/camp/new" class="btn btn-primary btn-large">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% camp.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>">
                </div>
                <div class="caption" style="text-align:center" >
                    <h4> <%=camp.name%> </h4>
                </div>
                <div class="caption" style="text-align:center" >
                    <a href="/camp/<%=camp._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <%}); %>
    </div>
</div>
<%- include('partials/footer'); -%>